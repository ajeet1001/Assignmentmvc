
@model UserLogin.Models.user
@using System.Web.Mvc.Html;
@{
    ViewBag.Title = "Login Page";
}
<div class="container">
   
        <div class="formRowContainer">
            <div class="labelContainer">@Html.LabelFor(model => model.username)</div>
            <div class="valueContainer">
                @Html.TextBoxFor(model => model.username, new { id = "username" })
                @Html.ValidationMessage("Enter Username")
            </div>
        </div>
        <div class="clearStyle"></div>
        <div class="formRowContainer">
            <div class="labelContainer">@Html.LabelFor(model => model.password)</div>
            <div class="valueContainer">
                @Html.PasswordFor(model => model.password, new { id = "password" })
                @Html.ValidationMessage("Enter Password")
            </div>
        </div>
        <div class="clearStyle"></div>
        <div class="buttonContainer">
            <button id="login">Login</button>
        </div>
    
</div>




@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Scripts/UserAuthentication.js")